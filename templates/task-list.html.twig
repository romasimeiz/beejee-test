{% extends 'layout/main.html.twig' %}
{% block body %}
<div class="row m-b-md">
    <div class="col-lg-12">
        <a class="btn btn-success" href="/task/create"> <i class="fa fa-plus"></i> Create task </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Text</th>
                            <th>Picture</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                        <tr class="gradeX">
                            <td>{{ task.name }}</td>
                            <td>{{ task.email }}
                            </td>
                            <td>{{ task.text }}</td>
                            <td>
                                {% if task.picture %}
                                    <img src="{{ task.picture_url }}" alt="">
                                {% endif %}
                            </td>
                            <td><input type="checkbox" class="i-checks" disabled="disabled" {% if (task.status) %} checked="checked" {% endif %}></td>
                            <td>
                                <a href="/task/{{ task.id }}/edit"> <i class="fa fa-pencil"></i> Edit</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}